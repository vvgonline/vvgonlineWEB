<body>
    <div class="presentation-container">
        <!-- Left Column (Text Content, Logo, and Navigation) -->
        <div class="column-left">
            <div id="slideTextContent">
                <!-- Content will be dynamically inserted here by JavaScript -->
            </div>
            <div class="nav-buttons">
                <button id="prevBtn" aria-label="Previous slide">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                        class="bi bi-arrow-left" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                            d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                    </svg>
                </button>
                <button id="nextBtn" aria-label="Next slide">Next
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                        class="bi bi-arrow-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                            d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
                    </svg>
                </button>
            </div>
            <div class="logo-placeholder">
                <img src="https://placehold.co/60x60/2c3e50/ecf0f1?text=Logo" alt="Placeholder logo">
            </div>
        </div>

        <!-- Right Column (Media and Indicators) -->
        <div class="column-right">
            <div id="slideMediaContent">
                <!-- Media will be dynamically inserted here by JavaScript -->
            </div>
            <div class="top-indicators" id="topIndicators">
                <!-- Slide indicators will be generated here by JavaScript -->
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>

    <!-- Custom Script -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const slideTextContent = document.getElementById('slideTextContent');
            const slideMediaContent = document.getElementById('slideMediaContent');
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            const topIndicators = document.getElementById('topIndicators');
            let currentSlide = 0;

            const slidesData = [
                {
                    heading: 'The Future of AI',
                    paragraph: 'Exploring the transformative impact of artificial intelligence on society, industry, and daily life.',
                    cta: 'Learn More',
                    ctaLink: '#cta-1',
                    media: '<img src="https://placehold.co/600x400/2c3e50/ecf0f1?text=Image" alt="Placeholder image for AI future">',
                },
                {
                    heading: 'Revolutionizing Healthcare',
                    paragraph: 'AI-driven diagnostics and personalized treatment plans are set to improve patient outcomes and streamline medical processes.',
                    cta: 'See Case Studies',
                    ctaLink: '#cta-2',
                    media: '<img src="https://placehold.co/600x400/2c3e50/ecf0f1?text=Image" alt="Placeholder image for healthcare">',
                },
                {
                    heading: 'Smart Transportation',
                    paragraph: 'From autonomous vehicles to optimized traffic flow, AI is making our cities smarter and more efficient.',
                    cta: 'Discover Our Solutions',
                    ctaLink: '#cta-3',
                    media: '<img src="https://placehold.co/600x400/2c3e50/ecf0f1?text=Image" alt="Placeholder image for transportation">',
                },
                {
                    heading: 'Creative Expression',
                    paragraph: 'Generative AI is empowering artists and creators with new tools for innovation and digital artistry.',
                    cta: 'View Our Portfolio',
                    ctaLink: '#cta-4',
                    media: '<img src="https://placehold.co/600x400/2c3e50/ecf0f1?text=Image" alt="Placeholder image for creativity">',
                },
                {
                    heading: 'Ethical Considerations',
                    paragraph: 'Addressing the critical questions of bias, privacy, and accountability in the age of intelligent machines.',
                    cta: 'Read Our Policy',
                    ctaLink: '#cta-5',
                    media: '<img src="https://placehold.co/600x400/2c3e50/ecf0f1?text=Image" alt="Placeholder image for ethics">',
                },
            ];

            const totalSlides = slidesData.length;

            function updateSlide() {
                const data = slidesData[currentSlide];

                // Update text content
                slideTextContent.innerHTML = `
                    <h1 class="display-4 fw-bold">${data.heading}</h1>
                    <p class="lead">${data.paragraph}</p>
                    <a href="${data.ctaLink}" class="cta-button">${data.cta}</a>
                `;

                // Update media content
                slideMediaContent.innerHTML = `<div class="media-placeholder">${data.media}</div>`;

                // Update button states
                prevBtn.disabled = currentSlide === 0;
                nextBtn.disabled = currentSlide === totalSlides - 1;

                // Update indicators
                updateIndicators();
            }

            function updateIndicators() {
                topIndicators.innerHTML = '';
                slidesData.forEach((slide, index) => {
                    const indicator = document.createElement('div');
                    indicator.classList.add('slide-indicator');
                    if (index === currentSlide) {
                        indicator.classList.add('active');
                    }
                    indicator.innerHTML = `
                        <div class="slide-indicator-num">${index + 1}.</div>
                        <div class="slide-indicator-bar"></div>
                    `;
                    indicator.addEventListener('click', () => {
                        currentSlide = index;
                        updateSlide();
                    });
                    topIndicators.appendChild(indicator);
                });
            }

            nextBtn.addEventListener('click', () => {
                if (currentSlide < totalSlides - 1) {
                    currentSlide++;
                    updateSlide();
                }
            });

            prevBtn.addEventListener('click', () => {
                if (currentSlide > 0) {
                    currentSlide--;
                    updateSlide();
                }
            });

            // Initial state
            updateSlide();
        });
    </script>
</body>

</html>