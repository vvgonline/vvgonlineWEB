            transition: background-color 0.3s ease, transform 0.2s ease;
            box-shadow: 0 4px 15px rgba(52, 152, 219, 0.4);
            border: none;
        }

        .cta-button:hover {
            background-color: #2980b9;
            transform: translateY(-2px);
        }

        .nav-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            align-items: center;
            position: absolute;
            left: 2rem;
            bottom: 10rem;
        }

        .nav-buttons button {
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            font-weight: bold;
            transition: background-color 0.3s ease, transform 0.2s ease;
            background-color: #1a73e8;
            border-radius: 0.75rem;
        }

        .nav-buttons #prevBtn {
            padding: 0.75rem 1rem;
        }

        .nav-buttons button:hover:not(:disabled) {
            background-color: #155cb0;
            transform: scale(1.05);
        }

        .nav-buttons button:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .fullscreen-btn-container {
            position: absolute;
            top: 2rem;
            right: 2rem;
            display: none;
            /* Hide on desktop as per wireframe */
        }

        .fullscreen-btn {
            background-color: var(--primary-color);
            color: white;
            border: none;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            transition: background-color 0.3s ease, transform 0.2s ease;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .fullscreen-btn:hover {
            background-color: #34495e;
            transform: scale(1.1);
        }

        /* New styling for slide indicators */
        .top-indicators {
            position: absolute;
            bottom: 2rem;
            left: 2rem;
            display: flex;
            justify-content: flex-start;
            align-items: flex-end;
            gap: 1rem;
            width: calc(100% - 4rem);
        }

        .slide-indicator {
            position: relative;
            text-align: center;
            transition: opacity 0.3s ease;
            cursor: pointer;
        }

        .slide-indicator.active .slide-indicator-num {
            color: #1a73e8;
            font-weight: bold;
        }

        .slide-indicator.active .slide-indicator-bar {
            background-color: #1a73e8;
            height: 6px;
        }

        .slide-indicator-num {
            font-size: 1.5rem;
            font-weight: bold;
            color: #ccc;
        }

        .slide-indicator-text {
            font-size: 1rem;
            color: #ccc;
        }

        .slide-indicator-bar {
            width: 100%;
            height: 4px;
            background-color: #ccc;
            transition: background-color 0.3s ease;
        }

        /* Responsive design */
        @media (min-width: 769px) {
            .presentation-container {
                flex-direction: row;
