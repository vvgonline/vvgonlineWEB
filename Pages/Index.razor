@page "/"

<PageTitle>VVG ONLINE // Design.Code.Market.Train.</PageTitle>
@inject NavigationManager _navManagr


@* meta tags *@
<HeadContent>
    <meta name="description" content="VVG ONLINE does Designing, IT Development, Digital Marketing and IT TRAINING." />
