<div role="main">
    <div>
        <section class="whatIdo mt-5 w-100 h-100">
            <article class="mx-auto my-auto mx-auto p-5">
                <p class="display-6" style="line-height: 3.5rem;">
                    offerings by
                </p>
                <h1 style="margin-top: -3rem; font-size: 3.5rem;">
                    vvg online
                </h1>
                <p style="margin-top: -2rem; line-height: -3rem;">
                    explore our collection of design, web/mobile apps, digital marketing &amp; training offering.
                </p>
                @* <a href="">Design.</a>
                <a href="">Code.</a>
                <a href="">Market.</a>
                <a href="">Train.</a> *@
            </article>
            <div class="container m-auto py-5">
                <div class="row mx-auto text-center">
                    <div class="col-sm-3 pb-5">
                        <a href="">
                            <img src="./images/skills/designing.svg" alt="Design" />
                        </a>
                    </div>
                    <div class="col-sm-3 pb-5">
                        <a href="">
                            <img src="./images/skills/coding.svg" alt="Code" />
                        </a>
                    </div>
                    <div class="col-sm-3 pb-5">
                        <a href="">
                            <img src="./images/skills/marketing.svg" alt="Market" />
                        </a>
                    </div>
                    <div class="col-sm-3 pb-5">
                        <a href="">
                            <img src="./images/skills/training.svg" alt="Train" />
                        </a>
                    </div>
                </div>

            </div>
        </section>
        @* what is vvg online *@
        <section class="dark-card-header py-5">
            <article class="px-5">
                <h2 class="display-4">
                    What is VVG online?
                </h2>
                <p class="h5">
                    <b>"VVG ONLINE"</b> is an authentic online representation of Vaibhav Vijay Gupta and his team of
                    experts who
                    share
                    their knowledge or professional advice with businesses.
                </p>
                @* quote *@
                <figure class="mt-5 p-4">
                    <blockquote class="blockquote text-center"></blockquote>
                    <p class="text-center h3 px-3 pb-3">
                        We at 'VVG ONLINE' are joining forces to speed up our journey towards a future that is more
                        sustainable,
                        inclusive, and growing for all.
                    </p>
                    <figcaption class="px-5 text-center blockquote-footer">
                        <cite title="Source Title"><b>VVG ONLINE</b></cite>
                    </figcaption>
                </figure>
            </article>
        </section>
        @* youtube section *@
        <section class="ytbg" style="">
            <article class="container">
                <h2 class="h1 youtube" style="">
                    youtube
                </h2>
                <p style="color: #a8a095; margin-top: 0;">free training</p>
            </article>
            <article class="container card mb-3">
                <div class="card-header px-0">
                    <h5 class="card-title">Add Blazor to an existing ASP.NET MVC project</h5>
                </div>
